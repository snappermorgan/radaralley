<div
    class="dm-template dm-menu menu7-{{ component_id }}"
    {% if wp_mode %}
        dm-template="menu.menu7"
        component-id="{{ component_id }}"
    {% endif %}>
    <nav class="menu column-3 sticky">
        <ul class="sections">
            <li class="left logo crop">
                <a
                    href="{{ brand.url }}"
                    {% if edit_mode %}
                        ng-href="[[ data.brand.url ]]"
                    {% endif %}>
                    {% if edit_mode %}
                    <div class="img-wrapper custom-img">
                        <customizer class="dm-popover top">
                            <div class="dm-control-button" data-width="300" dm-upload-type="image" dm-upload-media="data.brand.image"></div>
                            <div class="dm-control-button" dm-edit-url="data.brand.url"></div>
                        </customizer>
                        <img
                            alt="Designmodo"
                            height="25"
                            ng-src="{{ pluginUrl }}[[ data.brand.image ]]"/>
                    </div>
                    {% else %}
                    <img
                        alt="Designmodo"
                        height="25"
                        src="{{ pluginUrl }}{{ brand.image }}"  />
                    {% endif %}
                </a>
            </li>
            <li class="left wide">
                {% if edit_mode %}
                    <div class="menu-holder">
                {% endif %}
                {% macro render_one_line_menu(items) %}
                    <ul class="items">
                        {% for item in items %}
                            <li>
                                <a href="{{ item.url }}">{{ item.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endmacro %}
                {% if wp_mode %}
                    {{ _self.render_one_line_menu(mainMenu.items) }}
                    {% if edit_mode %}
                    <customizer class="dm-popover top">
                        <div class="dm-control-button" dm-external-nav="{{ menuEditPageUriPattern|format(mainMenu.id) }}"></div>
                    </customizer>
                    {% endif %}
                {% else %}
                    {{ _self.render_one_line_menu(menu) }}
                {% endif %}
                {% if edit_mode %}
                    </div>
                {% endif %}
            </li>
            <li class="right wide">
                {% if edit_mode %}
                    <span class="button" href="{{ button.url }}" ng-href="[[ data.button.url ]]">
                        <span dm-contenteditable contenteditable="true" ng-model="data.button.name">
                            {{ button.name }}
                        </span>
                        <customizer class="dm-popover top">
                            <span class="dm-control-button" dm-edit-url="data.button.url"></span>
                        </customizer>
                    </span>
                {% else %}
                    <a class="button" href="{{ button.url }}">
                        {{ button.name }}
                    </a>
                {% endif %}
            </li>
        </ul>
        <div class="burger">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="-10 16 20 20" enable-background="new -10 16 20 20">
                <path d="M-8.5 32h17"/>
                <path d="M-8.5 26h17"/>
                <path d="M-8.5 20h17"/>
            </svg>
        </div>
    </nav>
</div>