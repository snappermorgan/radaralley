<div
    class="dm-template dm-menu menu2-{{ component_id }}"
    {% if wp_mode %}
        dm-template="menu.menu2"
        component-id="{{ component_id }}"
    {% endif %}>
    <nav class="menu column-2 sticky">
        <ul class="sections">
            <li class="left logo crop">
                <a
                    href="{{ brand.url }}"
                    {% if edit_mode %}
                        ng-href="[[ data.brand.url ]]"
                    {% endif %}>
                    {% if edit_mode %}
                    <div class="img-wrapper custom-img">
                        <customizer class="dm-popover top">
                            <div class="dm-control-button" data-width="300" dm-upload-type="image" dm-upload-media="data.brand.image"></div>
                            <div class="dm-control-button" dm-edit-url="data.brand.url"></div>
                        </customizer>
                        <img 
                            alt="Designmodo"
                            height="25"
                            ng-src="{{ pluginUrl }}[[ data.brand.image ]]"/>
                    </div>
                    {% else %}
                    <img 
                        alt="Designmodo"
                        height="25"
                        src="{{ pluginUrl }}{{ brand.image }}"  />
                    {% endif %}
                </a>
            </li>
            <li class="right">
                {% if edit_mode %}
                    <span class="button" href="{{ button.url }}" ng-href="[[ data.button.url ]]">
                        <span dm-contenteditable contenteditable="true" ng-model="data.button.name">
                            {{ button.name }}
                        </span>
                        <customizer class="dm-popover top">
                            <span class="dm-control-button" dm-edit-url="data.button.url"></span>
                        </customizer>
                    </span>
                {% else %}
                    <a class="button" href="{{ button.url }}">
                        {{ button.name }}
                    </a>
                {% endif %}
            </li>
        </ul>
        <div class="burger">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="-10 16 20 20" enable-background="new -10 16 20 20">
                <path d="M-8.5 32h17"/>
                <path d="M-8.5 26h17"/>
                <path d="M-8.5 20h17"/>
            </svg>
        </div>
    </nav>
</div>