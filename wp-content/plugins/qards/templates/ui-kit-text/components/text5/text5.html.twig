<div
    class="dm-template dm-text text5-{{ component_id }}"
    {% if wp_mode %}
        dm-template="text.text5"
        component-id="{{ component_id }}"
    {% endif %}>
    <section class="text">
        <div class="container">
            <h1 
                {% if edit_mode %}
                    text-editing
                    ng-model="data.title"
                {% else %}
                    style="color: {{ title.style.color }};
                           font-family: {{ attribute(title.style, 'font-family') }};"
                    class="font-size-{{ attribute(title.classes, 'font-size') }}
                           line-height-{{ attribute(title.classes, 'line-height') }}"
                {% endif %}>
                {{ title.content }}
            </h1>
            <p 
                {% if edit_mode %}
                    class="hero"
                    text-editing
                    ng-model="data.hero"
                {% else %}
                    style="color: {{ hero.style.color }};
                           font-family: {{ attribute(hero.style, 'font-family') }};"
                    class="hero font-size-{{ attribute(hero.classes, 'font-size') }}
                           line-height-{{ attribute(hero.classes, 'line-height') }}"
                {% endif %}>
                {{ hero.content }}
            </p>
            <p class="hero">
                {% if edit_mode %}
                    <span class="button" href="{{ button.url }}" ng-href="[[ data.button.url ]]">
                        <span ng-model="data.button.name" dm-contenteditable contenteditable="true">{{ button.name }}</span>
                        <customizer class="dm-popover popover fade top">
                            <span class="dm-control-button" dm-edit-url="data.button.url"></span>
                        </customizer>
                    </span>
                {% else %}
                    <a class="button" href="{{ button.url }}">
                        {{ button.name }}
                    </a>
                {% endif %}
            </p>
        </div>
    </section>
</div>